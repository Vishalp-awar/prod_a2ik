        <div class="dashboard">
            
            </header>
            <!-- Sidebar -->
            <div class="sidebar">
                <h2 class="logo">Dashboard</h2>
                <ul>
                    <li><a  onclick="showForm('mainresourceForm')">Add Article</a></li>
                    <li><a  onclick="showForm('jobPostingForm')">Add Job</a></li>
